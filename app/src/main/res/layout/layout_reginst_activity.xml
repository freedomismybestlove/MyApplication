<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="event"
            type="android.view.View.OnClickListener"/>
        <variable
            name="message"
            type="com.myapplication.bean.ReginstMessageBean"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/event_editText"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:hint="请填入手机号"
            android:text="@={message.phone}"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="match_parent"
            android:padding="15dp"
            android:hint="请输入验证码"
            android:text="@={message.code}"
            android:layout_height="wrap_content"/>
        <EditText

            android:layout_width="match_parent"
            android:padding="15dp"
            android:hint="设置密码"
            android:text="@={message.password}"
            android:layout_height="wrap_content"/>
        <EditText

            android:layout_width="match_parent"
            android:padding="15dp"
            android:hint="请输入验证码"
            android:text="@={message.code}"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:padding="20dp"
            android:id="@+id/event_send"
            android:background="@drawable/shape_round_conner"
            android:text="注册用户"
            android:onClick="@{event}"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout></layout>